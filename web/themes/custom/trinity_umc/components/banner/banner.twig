{#
/**
* @file
* Template for banner component.
*/
#}
<div class="banner w-100">
  {% set image = content["#block_content"].field_banner_image.entity.field_media_image %}
  {% set image_uri = image|file_uri %}
  {% if image_uri is not null %}
    <img src="{{ image_uri|image_style('banner') }}" class="banner__image w-100" alt="{{ image.alt }}">
  {% endif %}
  {{ content|without('field_banner_image') }}
</div>
